10 CLS 
20 XMAX=PSIZE(0):YMAX=PSIZE(1)
30 XCEN=INT(XMAX/2)-0.5
40 YCEN=INT(YMAX/2)-0.5
50 'ANG=0.523598775
55 PI2=6.2'6.28318531
60 COL=74'INITIAL COLOR
70 DO 
80   CLS 
100   SCALE=RND(3)
102   IF SCALE=0 THEN SCALE=4:TOTAL=8 
103   IF SCALE=1 THEN SCALE=12:TOTAL=15 
104   IF SCALE=2 THEN SCALE=24:TOTAL=17 
106   ANG=PI2/(TOTAL-1)
110   FOR COUNT=1 TO TOTAL
120     IF SCALE=24 THEN 
130       R1=((RND(30)+85)/100)*SCALE
132     ELSE IF SCALE=12 THEN 
135       R1=((RND(40)+80)/100)*SCALE
140     ELSE 
150       R1=((RND(50)+75)/100)*SCALE
160     ENDIF 
170     T1=T1+(ANG*(RND(20)+90)/100)
200     CALL POLARLINE(R1,T1)
210     'PRINT T1,R1
240   NEXT COUNT
245   T1=0
250   WAIT 100
260 LOOP WHILE INKEY$=""
270   CLS:END 
280   PROC POLARLINE(R1,T1)'POLAR TO CARTESIAN
286   X2=X1:Y2=Y1
288   IF COUNT<TOTAL THEN 
290     X1=INT(@R1*COS(@T1))
300     Y1=INT(@R1*SIN(@T1))
304   ENDIF 
320   IF COUNT>1 THEN 
322     'IF RND(3)=1 THEN X1=X1+(RND(10)-RND(10))
323     'IF RND(3)=1 THEN Y1=Y1+(RND(10)-RND(10))
334   ELSE XTEMP=X1:YTEMP=Y1
335   ENDIF 
340   IF COUNT=TOTAL THEN 
350     X1=XTEMP:Y1=YTEMP
360   ENDIF 
400   IF COUNT>1 THEN 
430     LINE X1+XCEN,Y1+YCEN,X2+XCEN,Y2+YCEN,COL
450     'WAIT 5
460   ENDIF 
500   RETURN 
